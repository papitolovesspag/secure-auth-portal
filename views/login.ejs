<%- include('partials/header') %>

<div class="auth-container">
    <div class="secure-card">
      <% if (locals.error && locals.error.length > 0) { %>
        <div class="alert-error">
            <i class="fa-solid fa-circle-exclamation"></i> <%= error %>
        </div>
    <% } %>
        <div style="margin-bottom: 1.5rem;">
            <i class="fa-solid fa-layer-group" style="color: white; font-size: 2rem;"></i>
        </div>
        <h1>Log in to your account</h1>
        <p class="subtitle">Welcome back to the SecureAuth portal.</p>

        <a class="btn-google" href="/auth/google">
          <i class="fab fa-google" style="color: #DB4437; font-size: 1.1rem;"></i>
            Continue with Google
        </a>

        <div class="divider"><span>OR CONTINUE WITH EMAIL</span></div>

        <form action="/login" method="POST">
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="username" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required>
            </div>
            <button type="submit" class="btn-primary">Sign In</button>
        </form>

        <p class="auth-footer">
            Don't have an account? <a href="/register">Sign up</a>
        </p>
    </div>
</div>

<%- include('partials/footer') %>