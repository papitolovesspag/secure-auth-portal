<%- include('partials/header') %>

<div class="auth-container">
    <div class="secure-card secure-card-lg">
        
        <div class="status-badge">
            <i class="fa-solid fa-circle" style="font-size: 0.5rem; animation: pulse 2s infinite;"></i> 
            SECURE SESSION ACTIVE
        </div>

        <h1>Identity Verified</h1>
        <p class="subtitle">Welcome, <span style="color: white; font-weight: 600;"><%= user.email %></span></p>

        <div style="background: #000; border: 1px solid #333; border-radius: 8px; padding: 25px; margin-bottom: 2rem; text-align: left;">
            <div style="margin-bottom: 15px; font-size: 0.75rem; color: #555; text-transform: uppercase; letter-spacing: 1px; border-bottom: 1px solid #222; padding-bottom: 10px;">
                User Database Record
            </div>
            
            <div class="row">
                <div class="col-md-6" style="margin-bottom: 10px;">
                    <span style="color: #888; display: block; font-size: 0.8rem;">Database ID</span>
                    <span style="font-family: monospace; color: #3b82f6; font-size: 1.1rem;">USER_REF_00<%= user.id %></span>
                </div>
                <div class="col-md-6">
                    <span style="color: #888; display: block; font-size: 0.8rem;">Clearance Level</span>
                    <span style="font-family: monospace; color: #10b981; font-size: 1.1rem;">LEVEL_3_ADMIN</span>
                </div>
            </div>
            
            <div style="margin-top: 20px; padding-top: 15px; border-top: 1px dashed #333;">
                <span style="color: #888; display: block; font-size: 0.8rem; margin-bottom: 8px;">Decrypted Payload</span>
                
                <% if (secret) { %>
                    <p style="font-size: 1.2rem; margin: 0; color: white; font-family: 'Inter', sans-serif;">
                        "<%= secret %>"
                    </p>
                    <a href="/submit" style="display: inline-block; margin-top: 15px; font-size: 0.8rem; color: #3b82f6; text-decoration: none;">
                        <i class="fa-solid fa-pen"></i> Edit Entry
                    </a>
                <% } else { %>
                    <p style="color: #444; font-style: italic; margin-bottom: 10px;">[ No Data Found in Sector 7 ]</p>
                    <a href="/submit" class="btn-primary" style="display: inline-block; width: auto; padding: 8px 20px; text-decoration: none;">
                        <i class="fa-solid fa-plus"></i> Submit New Secret
                    </a>
                <% } %>
            </div>
        </div>

        <a class="btn btn-primary" href="/logout" style="background: #222; border: 1px solid #444; color: #ccc;">
            <i class="fa-solid fa-power-off"></i> Terminate Session
        </a>

    </div>
</div>

<%- include('partials/footer') %>